{
    // General
    "layer": "top",
    "position": "top",
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad",

        "hyprland/workspaces",
        "hyprland/submap",

        "wlr/taskbar",
    ],
    "modules-center": [
        "sway/window",
        "hyprland/window",
    ],
    "modules-right": [
        "custom/agenda",
        "cava",
        "gamemode",
        "privacy",
        "mpris",
        "pulseaudio",
        // "pulseaudio/slider",
        "cpu",
        "custom/weather",
        "custom/timer",
        "custom/break-reminder",
        "idle_inhibitor",
        "power-profiles-daemon",
        "tray",
        "clock",
    ],

    //
    // HYPRLAND specific modules
    //
    "hyprland/workspaces": {
        "show-special": true,
        "persistent-workspaces": {
            "*":    4,
            "DP-3": 4,
        },
    },
    "hyprland/window": {
      "icon": true,
      "icon-size": 16,
      "rewrite": {
          "(.*) ‚Äî Ablaze Floorp": "$1",
          "(.*) ‚Äî Mozilla Firefox": "$1",
      },
    },

    //
    // SWAY specific modules
    //
    "sway/workspaces": {
      "persistent-workspaces": {
          "1": [],
          "2": [],
          "3": [],
          "4": [],
      }
    },
    "sway/mode": {
        "format": "Ôóº {}",
        // "max-length": 50
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["?", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "sway/window": {
      "icon": true,
      "icon-size": 16,
      "rewrite": {
          "(.*) ‚Äî Ablaze Floorp": "$1",
          "(.*) ‚Äî Mozilla Firefox": "$1",
      },
      "expand": true,
    },

    //
    // Shared modules
    //
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÉ¥",
            "deactivated": "Ôà∂"
        }
    },
    "cpu": {
        "interval": 1,
        "format": " {load} Ôãõ  ",
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },

    "power-profiles-daemon": {
      "format": " {icon} ",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },

    "pulseaudio": {
        "scroll-step": 5, // %, can be a float
        "format": " {volume}% {icon} {format_source} ",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "cava": {
        "framerate": 60,
        "autosens": 1,
        "bars": 9,
        "bar_delimiter": 0,
        "input_delay": 2,
        "sleep_timer": 2,
        "hide_on_silence": true,
        "format-icons" : ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà" ]
    },
    "mpris": {
      "format": " {player_icon} {artist} ¬ª {title} ",
      "format-paused": "{status_icon} <i>{artist} ¬ª {title}</i> ",
      "player-icons": {
        "default": "‚ñ∂",
        "mpv": "¬ª",
        "spotify": "üéµ",
      },
      "status-icons": {
        "paused": "‚è∏ "
      },
      "ignored-players": [
          "firefox",
          "floorp",
          "vivaldi",
          "zen"
      ]
    },

    "gamemode": {
        "format": "{glyph}",
        "format-alt": "{glyph} {count}",
        "glyph": "Ôû≥",
        "hide-not-running": true,
        "use-icon": true,
        "icon-name": "input-gaming-symbolic",
        "icon-spacing": 4,
        "icon-size": 20,
        "tooltip": true,
        "tooltip-format": "Games running: {count}"
    },

    // don't show when the mic's on:
    // "privacy": { "modules": [{ "type":"screenshare" }] },

    "wlr/taskbar": {
        "on-click": "activate",
        "on-click-right": "maximise",
        "on-click-middle": "close",
        "tooltip-format": "{title}",
        "active-first": true,
    },
    "tray": {
      "spacing": 10,
      "icon-size": 16,
      "show-passive-items": false,
    },

    "clock": {
        "format-alt": "{:%I:%M}",
        "format": "{:%a %d %b ‚ãÑ Wk%V ‚ãÑ %I:%M:%S}",
        "interval": 1,
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode"          : "year",
            "mode-mon-col"  : 3,
            "weeks-pos"     : "right",
            "on-scroll"     : 1,
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions":  {
            "on-click-right": "mode",
            "on-scroll-up": "tz_up",
            "on-scroll-down": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    //
    // custom modules
    //
    "custom/timer": {
        "exec": "$HOME/.config/waybar/scripts/timer hook",
        "exec-on-event": false,
        "return-type": "json",
        "format": " {icon}  {0} ",
        "format-icons": {
            "standby": "Ôâî",
            "running": "Ôâí",
            "paused": "‚è∏ "
        },
        "on-click": "$HOME/.config/waybar/scripts/timer new 25 'notify-send \"Session finished\"'",
        "on-click-middle": "$HOME/.config/waybar/scripts/timer cancel",
        "on-click-right": "$HOME/.config/waybar/scripts/timer togglepause",
        "on-scroll-up": "$HOME/.config/waybar/scripts/timer increase 60 || $HOME/.config/waybar/scripts/timer new 1 'notify-send -u critical \"Timer expired\"'",
        "on-scroll-down": "$HOME/.config/waybar/scripts/timer decrease 60"
    },
    "custom/weather": {
        "format": "{}¬∞",
        "tooltip": true,
        "interval": 900,
        "exec": "wttrbar --ampm",
        "return-type": "json"
    },
    "custom/agenda": {
        "format": "{}",
        "exec": "~/.local/src/nextmeeting/src/nextmeeting/cli.py  --max-title-length 50 --waybar",
        "on-click": "~/.local/src/nextmeeting/src/nextmeeting/cli.py  --open-meet-url",
        // "on-click-right": "kitty -- /bin/env bash -c \"batz;echo;cal -3;echo;nextmeeting;read;\";",
        "interval": 59,
        "return-type": "json",
        "tooltip": "true"
    },
    "custom/break-reminder": {
        "exec": "~/.config/waybar/scripts/break-reminder.sh display",
        "interval": 1,
        "on-click": "~/.config/waybar/scripts/break-reminder.sh toggle",
        "on-click-right": "~/.config/waybar/scripts/break-reminder.sh reset",
        "on-click-middle": "~/.config/waybar/scripts/break-reminder-menu.sh",
        "tooltip": true,
        "tooltip-format": "Break Reminder\nLeft click: Pause/Resume\nRight click: Reset\nMiddle click: Settings"
    },
}
